<UserControl x:Class="MercanteDiVenezia.NewItemView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MercanteDiVenezia"
        xmlns:viewModels="clr-namespace:MercanteDiVenezia.ViewModels"
        mc:Ignorable="d" Height="800" Width="1200">
    <Grid>
        <StackPanel>
            <TextBox Width="100" Height="30" HorizontalAlignment="Left"  Text="{Binding Item.Name}" ></TextBox>
            <Button Width="100px" HorizontalAlignment="Left" Command="{Binding SaveItemCommand}">Zapisz</Button>
        </StackPanel>
    </Grid>

</UserControl>
